@{
    ViewData["Title"] = "Contacto";
}


<div class="container mt-5">

<h1>Formulario de contacto</h1>

<form asp-controller="Home" asp-action="Contacto">
    <div class="mb-3">
        <label for="nombre" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Ingresa tu nombre completo"/>

    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="example@example.com"/>

    </div>
    <div class="mb-3">
        <label for="mensaje" class="form-label">Mensaje</label>
        <textarea type="mensaje" class="form-control" id="mensaje" name="mensaje" rows="3"></textarea>

    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>

</form>
</div>